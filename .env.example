# ===============================
# Next.js App Config
# ===============================
# Your site URL (update for production deployment)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Port to run Next.js locally
PORT=3000

# ===============================
# Supabase Config
# ===============================
# Public URL for your Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Public anon key (safe for client-side use, from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (⚠️ server-side only, keep secret, do not expose to frontend)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===============================
# Database Config (optional if using Supabase only)
# ===============================
DATABASE_URL=postgresql://user:password@host:5432/database

# ===============================
# Authentication / JWT
# ===============================
# Supabase JWT secret (from project settings → API → JWT secret)
SUPABASE_JWT_SECRET=your-jwt-secret

# ===============================
# Vercel Deployment
# ===============================
VERCEL=true
VERCEL_ENV=development

# ===============================
# Other Service Integrations (examples)
# ===============================
# Email / SMTP
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Stripe (if you add billing later)
STRIPE_SECRET_KEY=sk_test_your-secret
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-public

# ===============================
# App-Specific Variables
# ===============================
# For your timekeeping + expenses modules
WEEK_START_DAY=Monday
ALLOW_EDIT_PAST_WEEKS=true

